<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:background="?attr/theme_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            android:text="Mobiltudós guide"
            android:textAllCaps="true"
            android:textColor="@color/magenta"
            android:textSize="25dp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:text="Verzió"
            android:textAllCaps="true"
            android:textColor="@color/magenta"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            android:text="v3.0"
            android:textColor="@android:color/black"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            android:text="Release date: 2017-03-30"
            android:textColor="@android:color/black"
            android:textSize="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Leírás"
            android:textAllCaps="true"
            android:textColor="@color/magenta"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Az alkalmazás kifejezetten a Mobiltudósoknak készült. Hasznos információk találhatók benne a Magyar Telekom Nyrt. kínálatában lévő eszközökről valamint szolgáltatásokról. Az itt megjelenített adatok nem feltétlenül publikusak és naprakészek. Tehát csak tájékoztató jellegűek. Ha hibát tapasztalsz jelentsd a beállítások menüből vagy az itt található gomb megnyomásával."
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/item_bg"
                android:onClick="sendFeedback"
                android:padding="10dp"
                android:text="Feedback"
                android:textAllCaps="true"
                android:textColor="@color/magenta"
                android:textSize="22dp"
                android:textStyle="bold"
                android:translationZ="2.5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/item_bg"
                android:onClick="openFacebook"
                android:padding="10dp"
                android:text="facebook"
                android:textColor="#3b5998"
                android:textSize="22dp"
                android:textStyle="bold"
                android:translationZ="2.5dp" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>