<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/theme_background"
    android:layout_marginTop="70dp">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="25dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="Mobiltudós guide"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/magenta"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/magenta"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:text="Verzió"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:text="v2.1.0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Release date: 2017-02-23" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/magenta"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:text="Leírás"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:gravity="center"
            android:text="Az alkalmazás kifejezetten a Mobiltudósoknak készült. Hasznos információk találhatók benne a Magyar Telekom Nyrt. kínálatában lévő eszközökről valamint szolgáltatásokról. Az itt megjelenített adatok nem feltétlenül publikusak és naprakészek. Ha hibát tapasztalsz jelentsd a beállítások menüből." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/magenta"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal"
            android:text="Feedback"
            android:background="@drawable/item_bg"
            android:onClick="sendFeedback"/>


    </LinearLayout>
</ScrollView>