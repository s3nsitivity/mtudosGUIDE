<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryDark">@color/magenta</item>
        <item name="colorAccent">@color/magenta</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@color/almostBlack</item>
        <item name="theme_background">@color/white</item>
        <item name="item_background">@color/white</item>
    </style>

    <style name="MainDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryDark">@color/magenta</item>
        <item name="colorAccent">@color/magenta</item>
        <item name="theme_background">@color/almostBlack</item>
        <item name="item_background">@color/black</item>

    </style>

    <style name="AppIntroTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryDark">@color/magenta</item>
        <item name="colorAccent">@color/magenta</item>
    </style>

    <style name="SettingsDarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryDark">@color/almostBlack</item>
        <item name="colorAccent">@color/magenta</item>
        <item name="android:background">@color/almostBlack</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/magenta</item>
    </style>

    <style name="Main2Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryDark">@color/magenta</item>
        <item name="colorAccent">@color/magenta</item>
        <item name="theme_background">@color/white</item>
        <item name="item_background">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@color/magenta</item>
    </style>

    <style name="Main2DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryDark">@color/magenta</item>
        <item name="colorAccent">@color/magenta</item>
        <item name="theme_background">@color/almostBlack</item>
        <item name="item_background">@color/black</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@color/magenta</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
